            <ImageView android:paddingTop="30dp" android:layout_width="-2" android:layout_height="-2" android:src="@drawable/ic_events" />
            <TextView android:gravity="11" android:paddingTop="10dp" android:paddingBottom="30dp" android:layout_width="-1" android:layout_height="-1" android:text="EVENTS" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
