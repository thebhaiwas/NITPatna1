            <TextView android:gravity="11" android:paddingTop="10dp" android:paddingBottom="30dp" android:layout_width="-1" android:layout_height="-1" android:text="DOWNLOAD" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout android:orientation="0" android:layout_width="-1" android:layout_height="-2" android:weightSum="4.0"
